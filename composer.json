{
    "name": "exelearning/exelearning",
    "description": "eXeLearning 3 is an AGPL-licensed free/libre tool to create and publish open educational resources.",
    "type": "project",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=8.4",
        "ext-ctype": "*",
        "api-platform/doctrine-orm": "^4.1",
        "api-platform/symfony": "^4.1",
        "doctrine/doctrine-bundle": "^2.15",
        "doctrine/doctrine-migrations-bundle": "^3.4",
        "doctrine/orm": "^3.5",
        "firebase/php-jwt": "^6.11",
        "liip/imagine-bundle": "^2.13",
        "phpdocumentor/reflection-docblock": "^5.6",
        "phpstan/phpdoc-parser": "^2.2",
        "symfony/asset": "^7.3",
        "symfony/console": "^7.3",
        "symfony/dotenv": "^7.3",
        "symfony/expression-language": "^7.3",
        "symfony/flex": "^2",
        "symfony/form": "^7.3",
        "symfony/framework-bundle": "^7.3",
        "symfony/http-client": "^7.3",
        "symfony/intl": "^7.3",
        "symfony/mailer": "^7.3",
        "symfony/mercure-bundle": "^0.3.9",
        "symfony/monolog-bundle": "^3.10",
        "symfony/process": "^7.3",
        "symfony/property-access": "^7.3",
        "symfony/property-info": "^7.3",
        "symfony/runtime": "^7.3",
        "symfony/security-bundle": "^7.3",
        "symfony/security-core": "^7.3",
        "symfony/serializer": "^7.3",
        "symfony/translation": "^7.3",
        "symfony/twig-bundle": "^7.3",
        "symfony/uid": "^7.3",
        "symfony/validator": "^7.3",
        "symfony/web-link": "^7.3",
        "symfony/yaml": "^7.3",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "brianium/paratest": "*",
        "dama/doctrine-test-bundle": "^8.2",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "*",
        "rector/rector": "^2.1",
        "symfony/browser-kit": "^7.3",
        "symfony/css-selector": "^7.3",
        "symfony/debug-bundle": "^7.3",
        "symfony/maker-bundle": "^1.0",
        "symfony/panther": "*",
        "symfony/phpunit-bridge": "^7.3",
        "symfony/stopwatch": "^7.3",
        "symfony/web-profiler-bundle": "^7.3"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "assets-install": "php bin/console assets:install public",
        "db-schema-update": "php bin/console doctrine:schema:update --force",
        "create-user": "php bin/console app:create-user ${TEST_USER_EMAIL} ${TEST_USER_PASSWORD} ${TEST_USER_USERNAME} --no-fail",
        "generate-api-key": "php bin/console app:generate-api-key",
        "php-cs-checker": "vendor/bin/php-cs-fixer check src --config=.php-cs-fixer.dist.php --using-cache=no",
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix src --config=.php-cs-fixer.dist.php --using-cache=no",
        "js-lint": "yarn lint",
        "js-fix": "yarn lint:fix",
        "phpunit": [
            "@phpunit-unit",
            "@phpunit-e2e",
            "@phpunit-e2e-realtime"
        ],
        "phpunit-unit": "vendor/bin/phpunit --testsuite unit --testdox --no-extensions --colors=always",
        "phpunit-unit-parallel": "DISABLE_PANTHER_EXT=1 vendor/bin/paratest --processes auto --functional --tmp-dir /dev/shm --testsuite unit --colors=always",
        "phpunit-e2e": "vendor/bin/paratest --processes auto --tmp-dir /dev/shm --testsuite e2e --colors=always",
        "phpunit-e2e-realtime": "vendor/bin/paratest --processes auto --tmp-dir /dev/shm --testsuite e2e-realtime --colors=always",
        "phpunit-e2e-offline": "vendor/bin/paratest --processes auto --tmp-dir /dev/shm --testsuite e2e-offline --colors=always",
        "translations:extract": "php bin/console app:translations:extract",
        "cache-clear": "php bin/console cache:clear",
        "update-licenses": "php bin/update-licenses.php"
    },
    "scripts-descriptions": {
        "php-cs-checker": "Run PHP-CS-Fixer to check coding style issues.",
        "php-cs-fixer": "Run PHP-CS-Fixer to automatically fix coding style issues.",
        "phpunit": "Run ALL tests with optimal settings for each suite.",
        "phpunit-unit": "Run unit tests.",
        "phpunit-e2e": "Run e2e tests with maximum reliability (process isolation).",
        "phpunit-e2e-realtime": "Run e2e-realtime tests with maximum reliability (process isolation).",
        "phpunit-unit-parallel": "Run unit tests in parallel using paratest with maximum speed (--functional mode)",
        "db-schema-update": "Run the migrations to update the database schema.",
        "cache-clear": "Clear the Symfony cache.",
        "assets-install": "Install the public assets."
    },
    "extra": {
        "symfony": {
            "docker": false,
            "allow-contrib": true
        }
    }
}
